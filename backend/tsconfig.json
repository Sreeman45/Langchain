{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2020"],
    "types": ["node"],

    // Output
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    // Strictness
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    // Module Resolution
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}